{% extends "EkreativeAppsBundle::base.html.twig" %}


{% block body %}
<ul class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="{{path('ekreative_ios_apps_homepage')}}">All apps</a></li>
    <li><a  class="active" href="{{path('ekreative_ios_folder',{'id':folder.id})}}">{{folder.name}}</a></li>
</ul>

{{form_start(appform , {'attr':{'class':'well  form-horizontal'}})  }}
<div class="forminline">{{form_widget(appform.uploadedFile)}}</div>
<div class="forminline">{{form_widget(appform.version)}}</div>
<div class="forminline">{{form_widget(appform.bundleIdentifier)}}</div>
<div class="forminline">{{form_widget(appform.comment)}}</div>
<div class="forminline">{{form_widget(appform.save,{'attr':{'class':'btn btn-success'}})}}</div>
<div style="clear: both;"></div>
{{form_end(appform)}}
    <div class="apps_wrapper">
    {% for app in folder.app %}
        <div class="ios appbox" >
            <div class="lastmodiffed" >{{app.date.format('H:i:s d.m.Y')}}</div>            
            {#<img src="{{app.qrcode}}" />#}
            <div><a href="{{path('ekreative_download_ios_app', {'folder':folder.id, 'id':app.id, 'token':app.token} ) }}" >download</a></div>
            <div class="">
                <div class="comment-place">
                    {{app.version}}
                    {{app.bundleIdentifier}}
                    {{app.comment}}
                </div>
                <div class="delete-place">
                    <a class="btn btn-success" href="{{path('ekreative_delete_ios_app',{'id':app.id})}}"  onclick="return confirm('are you sure?')" >Delete</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}