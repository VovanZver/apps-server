{% extends "EkreativeTestBuildWebBundle::base.html.twig" %}


{% block body %}

    <div>
        <nav class="text-center">
            <ul class="pagination">
                {% for i in 1..pages %}
                    <li {% if i==page %} class="active"{% endif %}><a href="{{ path('projects',{'page':i}) }}">{{ i }}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </div>

    <table class="table margin-top-15">
        <tr>
            <td>#</td>
            <td>Project name</td>
            <td>Date created</td>
            <td>Date updated</td>
            <td></td>
            <td></td>
        </tr>

        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.created_on|date("d/m/Y") }}</td>
                <td>{{ project.updated_on|date("d/m/Y") }}</td>
                <td>
                    <a class="btn-sm btn-primary" href="{{ path('project_builds',{'project':project.id,'type':'ios'}) }}">IOS</a>
                </td>
                <td>
                    <a class="btn-sm btn-primary" href="{{ path('project_builds',{'project':project.id,'type':'android'}) }}">Android</a>
                </td>
                <td>
                    {% if project['apps'] is defined %}
                        {{ dump(project['apps']) }}
                    {% endif %}

                </td>
            </tr>
        {% endfor %}
    </table>
    <div>
        <nav class="text-center">
            <ul class="pagination">
                {% for i in 1..pages %}
                    <li {% if i==page %} class="active"{% endif %}><a href="{{ path('projects',{'page':i}) }}">{{ i }}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </div>

{% endblock %}