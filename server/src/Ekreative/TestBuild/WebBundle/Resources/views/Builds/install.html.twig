{% extends "EkreativeTestBuildWebBundle::base.html.twig" %}


{% block body %}


<div class="content-center" >

    <div><img src="{{ app.qrcodeUrl }}"></div>
    <div class="app-name">{{ app.name }}</div>
    <div class="margin-top-15">{{ app.version }}</div>
    <div>{{ app.comment }}</div>
    <div>{{ app.created|date('H:i:s d/m/Y') }}</div>

    {% if app.type =='ios' %}
        <div><a class="btn btn-primary" href="{{ app.plistUrl }}">Install</a></div>
    {% elseif app.type =='android' %}
        <div><a class="btn btn-primary" href="{{ app.buildUrl }}">Install</a></div>
    {% endif %}
</div>


{% endblock %}