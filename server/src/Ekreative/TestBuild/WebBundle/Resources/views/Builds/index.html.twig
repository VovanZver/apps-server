{% extends "EkreativeTestBuildWebBundle::base.html.twig" %}


{% block body %}
    <a class="btn btn-primary margin-bottom-15" href="{{ path('projects') }}">Back</a>

    <div class="upload-form">
        {{ form_start(appform , {'attr':{'class':'form-horizontal'}}) }}
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3">{{ form_widget(appform.build) }}</div>
            <div class="col-sm-6 col-md-4 col-lg-2">{{ form_widget(appform.version) }}</div>
            {% if type=='ios' %}
            <div class="col-sm-6 col-md-4 col-lg-2">{{ form_widget(appform.bundleId) }}</div>
            {% endif %}
            <div class="col-sm-6 col-md-4 col-lg-2">{{ form_widget(appform.comment) }}</div>
            <div class="col-sm-6 col-md-4 col-lg-2">{{ form_widget(appform.save,{'attr':{'class':'btn btn-success'}}) }}</div>
        </div>
        {{ form_end(appform) }}
    </div>

    <table class="table">
        <tr>
            <td>#</td>
            <td>icon</td>
            <td>name</td>
            <td>version</td>
            <td>created</td>
            <td></td>
        </tr>

        {% for project in apps %}
            <tr>
                <td>{{ project.id}}</td>
                <td><img width="57" height="57" src="{{ project.iconUrl }}"></td>
                <td>{{ project.name }}</td>
                <td>{{ project.version }}</td>
                <td>{{ project.created|date("d/m/Y") }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('build_install',{'token':project.token}) }}" target="_blank" >Install</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}